---
import { Lang } from '../components/Lang.jsx'
import json from '../helpers/colous.json'
import { marked } from 'marked'
import LangBar from './LangBar.svelte'

const { url, title, code, tag, colour, readme, topics, lang } = Astro.props

//console.log(title +' readme: '+ readme)
const readme_html = marked.parse(readme)
---

<div class="text-5xl pl-6 pt-5 mb-5">{url}</div>

<div class="hidden md:block float-left w-[65%] pl-[5%]">
	<p class="text-sm">
		<Fragment set:html={readme_html} />
	</p>
</div>
<div class="h-fit md:float-left w-[90%] m-auto md:w-[30%] rounded-xl bg-white break-words p-4">
	<!-- <div class="w-[80px] h-32 float-left" transition:name={ url }>
		<div class="float-left w-fit"><Blox type="profile" tag={ code } name={ tag } footer={ title } colour={ colour }  /></div>
	</div> -->
	<strong>About</strong>
	<br>
	<span class="text-sm">insert description here</span>
	<br><br>
	<strong>Topics</strong>
	<br>
	{topics.map((item) => (
		<div class="inline-block rounded-xl pl-3 pr-3 pt-1 pb-1 mr-3 m-2 text-sm bg-slate-200">{item.toString()}</div>
	))}
	<br><br>
	<strong>Languages</strong>
	<br>
	<LangBar {lang} />
	<span class="text-[16px]">
		<Lang languages={JSON.stringify(lang)} colours={json} />
	</span>
	<br>
</div>
<div class="float-left md:hidden w-[90%] m-auto pt-5 pl-[5%]">
	<p class="text-sm">
		<Fragment set:html={readme_html} />
	</p>
</div>
